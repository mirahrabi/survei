    <h2>Survei Kepuasan Pelanggan</h2>
    <form id="surveyForm">
        <div class="form-group">
            <label>Nama:</label>
            <input type="text" id="name" required>
        </div>
        <div class="form-group">
            <label>Seberapa puas Anda dengan layanan kami?</label><br>
            <input type="radio" name="kepuasan" value="Sangat Puas" required> Sangat Puas<br>
            <input type="radio" name="kepuasan" value="Puas"> Puas<br>
            <input type="radio" name="kepuasan" value="Cukup"> Cukup<br>
            <input type="radio" name="kepuasan" value="Kurang"> Kurang
        </div>
        <div class="form-group">
            <label>Masukan atau Saran:</label><br>
            <textarea id="saran" rows="4" cols="50"></textarea>
        </div>
        <button type="submit">Kirim</button>
    </form>

    <script>
        document.getElementById('surveyForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            let name = document.getElementById('name').value;
            let kepuasan = document.querySelector('input[name="kepuasan"]:checked').value;
            let saran = document.getElementById('saran').value;
            
            console.log("Nama:", name);
            console.log("Kepuasan:", kepuasan);
            console.log("Saran:", saran);
            
            alert("Terima kasih atas partisipasi Anda!");
            document.getElementById('surveyForm').reset();
        });
    </script>
